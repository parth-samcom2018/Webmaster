<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/blue_grey_ligthen_5"
        android:orientation="vertical"
        tools:context="com.digitalmid.seograph_webmasters_tool.ComparisonFragment"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center_vertical">


                <Button
                    android:id="@+id/stat_date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:text="Date"
                    android:textColor="@color/blue_grey_lighten_1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/date_prev_interval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_arrow_left"
                        android:tint="@color/blue_grey_lighten_2" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/date_next_interval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/blue_grey_lighten_2" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/toggle_group_results"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_group"
                        android:tint="@color/blue_grey_lighten_2" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/toggle_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_filter_list"
                        android:tint="@color/blue_grey_lighten_2" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center_vertical">


                <Button
                    android:id="@+id/stat_date_view_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:text="Date"
                    android:textColor="@color/blue_grey_lighten_1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/date_prev_interval_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_arrow_left"
                        android:tint="@color/blue_grey_lighten_2" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/date_next_interval_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/blue_grey_lighten_2" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/toggle_group_results_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_group"
                        android:tint="@color/blue_grey_lighten_2" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/toggle_filter_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/ic_filter_list"
                        android:tint="@color/blue_grey_lighten_2" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/compare"
            android:textSize="12sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="4">


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/tv_clicks_compare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:tag="clicks"
                android:checked="true"
                android:text="@string/clicks" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/tv_ctr_compare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:tag="ctr"
                android:text="@string/CTR" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/tv_position_compare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="Position"
                android:text="@string/position" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/tv_impression_compare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:singleLine="true"
                android:tag="Impressions"
                android:text="@string/impressions" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp">

                <!--Loading Indicator -->
                <!--<include
                    layout="@layout/loading_indicator"
                    />-->
                <ProgressBar
                    android:id="@+id/loading_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="false" />


                <TextView
                    android:id="@+id/empty_response_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/query_returned_no_data"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/wait_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Hold On We are getting data!!"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="blocksDescendants"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/lineChartCard_comparison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape"
                        android:minHeight="400dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <include
                                android:id="@+id/linechart_toggle_grid"
                                layout="@layout/graph_grid_toggler" />

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/stats_line_chart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/linechart_toggle_grid"
                                android:scrollbars="vertical|horizontal" />
                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/pieChartCard_comparison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:minHeight="400dp"
                        android:visibility="gone"
                        android:background="@drawable/shape">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <include
                                android:id="@+id/piechart_toggle_grid"
                                layout="@layout/graph_grid_toggler" />

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/devices_piechart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/piechart_toggle_grid" />
                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/barChartCard_comparison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:background="@drawable/shape">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <include
                                android:id="@+id/barchart_toggle_grid"
                                layout="@layout/graph_grid_toggler" />

                            <com.github.mikephil.charting.charts.HorizontalBarChart
                                android:id="@+id/countries_barchart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/barchart_toggle_grid"
                                android:minHeight="450dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/keywordbarChartCard_comparison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:background="@drawable/shape">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <include
                                android:id="@+id/barchart_toggle_grid"
                                layout="@layout/graph_grid_toggler" />

                            <com.github.mikephil.charting.charts.HorizontalBarChart
                                android:id="@+id/keywords_barchart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/barchart_toggle_grid"
                                android:minHeight="450dp" />
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:text="Keyword"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:gravity="right"
                            android:text="Nov26-Dec03"
                            android:textSize="14dp"
                            android:layout_gravity="right"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_date_old"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:gravity="center"
                            android:text="Nov26-Dec03"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_change"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:text="Change"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView_compare"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:scrollbars="vertical"
                            android:visibility="visible"
                            android:layout_weight="1"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:scrollbars="vertical"
                            android:visibility="gone"
                            android:layout_weight="1"
                           />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView_old"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:scrollbars="vertical"
                            android:visibility="gone"
                            android:layout_weight="1"
                           />


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/ll_change">

                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-12"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/red"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-7"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/red"
                                android:layout_marginTop="20dp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/green"
                                android:visibility="visible" />


                            <TextView
                                android:id="@+id/tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/green"
                                android:visibility="visible" />


                            <TextView
                                android:id="@+id/tv5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/green"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="15"
                                android:textSize="14dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/green"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="8"
                                android:textSize="14dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/green"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </FrameLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>